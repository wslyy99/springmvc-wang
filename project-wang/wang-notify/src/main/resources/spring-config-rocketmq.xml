<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:mvc="http://www.springframework.org/schema/mvc" 
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
       		http://www.springframework.org/schema/beans/spring-beans.xsd 
       		http://www.springframework.org/schema/context 
       		http://www.springframework.org/schema/context/spring-context.xsd
       		http://www.springframework.org/schema/aop 
       		http://www.springframework.org/schema/aop/spring-aop.xsd
       		http://www.springframework.org/schema/mvc
       		http://www.springframework.org/schema/mvc/spring-mvc.xsd"
       default-autowire="byName">
	<!-- 监听实现 -->
    <bean id="rocketMqListener" class="com.wang.rocketmq.SimpleRocketMqListener"></bean>
    <!-- 监听配置 -->
    <bean id="consumer" class="com.wang.rocketmq.spring.Consumer" init-method="init">
        <property name="consumerGroup" value="PushConsumer"/>
        <property name="namesrvAddr" value="${ROCKETMQ_CONN}" />
        <property name="topic" value="HomeActionTopic"/>
        <property name="subExpression" value="pushMessage || smsMessage || incentiveEvent"/>
        <property name="rocketMqMessageListener" ref="rocketMqListener"/>
    </bean>

</beans>